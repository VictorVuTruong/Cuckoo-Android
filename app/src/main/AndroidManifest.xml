<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beta.myhbt_api">
    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hbtgram1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hbtgram1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--
             The API key for Google Maps-based APIs.
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".View.ExploreLocation"></activity>
        <activity android:name=".View.ProfileDetail" />
        <activity android:name=".View.SearchUserToChatWith" />
        <activity android:name=".View.ChatSendImage" />
        <activity
            android:name=".View.Chat"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".View.UpdateCoverPhoto" />
        <activity android:name=".View.UpdateAvatar" />
        <activity android:name=".View.SignUpCreateEmailAndPassword" />
        <activity android:name=".View.SignUpVerifyInfo" />
        <activity android:name=".View.SignUpEnterStudentId" />
        <activity
            android:name=".View.MainMenu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.HBTGramPostDetail" />
        <activity android:name=".View.HBTGram" />
        <activity android:name=".View.MainPage" />
        <activity android:name=".View.LoginActivity" />
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>